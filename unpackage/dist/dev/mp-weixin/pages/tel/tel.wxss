
.top {
  height: 480rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  background-color: #E8E8E8;
}
.logo {
  width: 180rpx;
  height: 180rpx;
  margin-top: 50rpx;
  margin-bottom: 20rpx;
}
.name {
  color: #0C5182;
  margin-bottom: 10px;
}
.code {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20px;
}
.tel {
  height: 150rpx;
  padding: 0 10px;
  color: #666;
  background-color: #F3F3F3;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
  justify-content: space-around;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.tel-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
}
.tel-item image {
  width: 30px;
  height: 30px;
  margin-right: 10px;
}
.tel-item text {
  line-height: 50rpx;
}
.location {
  text-align: center;
  line-height: 130rpx;
}
.img {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.img-box {
  width: 460rpx;
  height: 460rpx;
  padding: 20rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  margin-left: -250rpx;
  margin-top: -230rpx;
  background: #FFF;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, .1);
  border-radius: 10rpx;
}
.img-box image {
  width: 460rpx;
  height: 460rpx;
}