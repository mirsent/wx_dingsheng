
.top {
  height: 480rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  background-color: #E8E8E8;
}
.logo {
  width: 180rpx;
  height: 180rpx;
  margin-top: 50rpx;
  margin-bottom: 20rpx;
}
.name {
  color: #0C5182;
  margin-bottom: 10px;
}
.code {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20px;
}
.location {
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
  align-items: flex-start;
}
.img-box {
  width: 460rpx;
  height: 460rpx;
  padding: 20rpx;
  position: fixed;
  left: 50%;
  top: 50%;
  z-index: 999;
  margin-left: -250rpx;
  margin-top: -230rpx;
  background: #FFF;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, .1);
  border-radius: 10rpx;
}
.img-box image {
  width: 460rpx;
  height: 460rpx;
}